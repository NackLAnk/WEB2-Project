<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- links -->

    <link rel="stylesheet" href="styles/style.css">

    <!-- scripts -->

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://kit.fontawesome.com/c85c87a3ad.js" crossorigin="anonymous"></script>
    <title>Pizza Delivery</title>
</head>

<body>
    <header>
        <div id="navbar-bg" class="container">
            <ul id="navbar" class="navbar">
                <div class="navbar__brand">
                    <div>
                        <a href="#">
                            <img src="/images/logo/logo-pizza__delivery.png" width="50px" height="50px" alt="">
                        </a>
                    </div>
                    <div>
                        <div class="navbar__brand__title text-bold">
                            <span id="navbar-logo-text" class="text-color__white">
                                СУШИ & ПИЦЦА ZENZA
                            </span>
                        </div>
                    </div>
                </div>
            </ul>
            <div class="navbar__account">
                <% if (!userLoggedIn) { %>
                    <a href="/login" class="navbar__account-login">
                        <span id="navbar-login" class="text-color__white">
                            Войти
                        </span>
                    </a>
                    <a href="/signUp" class="navbar__account-sign-up">
                        <span id="navbar-sign-in" class="text-color__white">
                            Зарегистрироваться
                        </span>
                    </a>
                    <% } else { %>
                        <a href="/profile">
                            <span id="navbar-profile" class="text-color__white">
                                <%= userName %>
                                    <%= userLastName %>
                            </span>
                        </a>
                        <% } %>
            </div>
        </div>
        <div class="image">
            <div class="image-text text-bold text-color__white">
                <span class="image-text__size">Sushi Zenza Astana</span> <br>
                <span class="image-text__size-under">Лучшие суши в Казахстане<i
                        class="fa-solid fa-heart pl-5"></i></span>
            </div>
            <img class="top__image-header" src="/images/top/top-image.jpg" alt="">
        </div>
    </header>
    <!-- top image -->

    <article>
        <div class="container__article-top">
            <ul class="list__unstyled article__top-information">
                <li class="article__top-text__padding">
                    <i class="fa-solid fa-clock"></i>
                    <span class="pl-5">
                        <% if (isOpen) { %>
                            Открыто до 23:00
                            <% } else { %>
                                <span class="text--attention">
                                    Работаем с 8:00 до 23:00
                                </span>
                                <% } %>
                    </span>
                </li>
                <li class="article__top-text__padding">
                    <i class="fa fa-heart" aria-hidden="true"></i> <span class="pl-5"> 9,0 </span>
                </li>
                <li class="article__top-text__padding">
                    <i class="fa fa-info-circle" aria-hidden="true"></i> <span class="pl-5"> Подробнее </span>
                </li>
            </ul>
        </div>
        <div class="line"></div>
        <section>
            <ul id="container__article-menu" class="list__unstyled article__top-menu">
                <li class="container__article-menu__padding" href="#gunkan">
                    <a href="#gunkan" class="article__menu-text__padding">Гункан <i class="fas fa-fish pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#appetizers">
                    <a href="#appetizers" class="article__menu-text__padding">Закуски <i
                            class="fas fa-french-fries pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#pizza">
                    <a href="#pizza" class="article__menu-text__padding">Пицца <i
                            class="fas fa-pizza-slice pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#sushi">
                    <a href="#sushi" class="article__menu-text__padding">Роллы <i class="fas fa-fish pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#fried">
                    <a href="#fried-rolls" class="article__menu-text__padding">Роллы жаренные <i
                            class="fas fa-fish-cooked pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#baked">
                    <a href="#baked-rolls" class="article__menu-text__padding">Роллы запеченные <i
                            class="fas fa-fish-cooked pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#sets">
                    <a href="#sets" class="article__menu-text__padding">Сеты <i class="fas fa-apple-crate pl-5"></i></a>
                </li>
                <li class="container__article-menu__padding" href="#drinks">
                    <a href="#drinks" class="article__menu-text__padding">Напитки <i
                            class="fas fa-burger-soda pl-5"></i></a>
                </li>
                <div class="search">
                    <form role="search">
                        <div class="search__container">
                            <input type="text" class="search__menu">
                            <a href="" class="search__button"><i class="fa-sharp fa-solid fa-magnifying-glass"></i></a>
                        </div>
                    </form>
                </div>
            </ul>
            <br>
            <br>
            <br>
            <br>
            <section id="departments">
                <article class="department" id="gunkan">
                    <h2 class="department-text">Гункан</h2>
                    <div class="menu-cards">
                        <div class="menu-card" id="menu">
                            <img class="menu-image__settings" src="/images/top/no_img.jpg" alt="">
                            <div class="menu-card__information">
                                <div class="text-bold">
                                    Гункан с Лососем
                                </div>
                                <div class="menu-card__information-price text-bold">
                                    800 KZT
                                </div>
                                <div class="menu-card__information-ingredients">
                                    Рис, лосось, нори
                                </div>
                            </div>
                            <div class="menu-card__button">
                                <a class="menu-card__button-card" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-cart-shopping"></i>
                                    </span>
                                    <div class="menu-card__white text-bold">
                                        Добавить к заказу
                                    </div>
                                </a>

                                <a class="menu-card__button-like" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-heart icon__settings"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                        <div class="menu-card">
                            <img class="menu-image__settings" src="/images/top/no_img.jpg" alt="">
                            <div class="menu-card__information">
                                <div class="text-bold">
                                    Гункан с Угрем
                                </div>
                                <div class="menu-card__information-price text-bold">
                                    800 KZT
                                </div>
                                <div class="menu-card__information-ingredients">
                                    Рис, угорь, нори, унаги соус
                                </div>
                            </div>
                            <div class="menu-card__button">
                                <a class="menu-card__button-card" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-cart-shopping"></i>
                                    </span>
                                    <div class="menu-card__white text-bold">
                                        Добавить к заказу
                                    </div>
                                </a>

                                <a class="menu-card__button-like" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-heart icon__settings"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                        <div class="menu-card">
                            <img class="menu-image__settings" src="/images/top/no_img.jpg" alt="">
                            <div class="menu-card__information">
                                <div class="text-bold">
                                    Гункан Креветка
                                </div>
                                <div class="menu-card__information-price text-bold">
                                    800 KZT
                                </div>
                                <div class="menu-card__information-ingredients">
                                    Рис, креветка, нори
                                </div>
                            </div>
                            <div class="menu-card__button">
                                <a class="menu-card__button-card" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-cart-shopping"></i>
                                    </span>
                                    <div class="menu-card__white text-bold">
                                        Добавить к заказу
                                    </div>
                                </a>

                                <a class="menu-card__button-like" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-heart icon__settings"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                        <div class="menu-card">
                            <img class="menu-image__settings" src="/images/top/no_img.jpg" alt="">
                            <div class="menu-card__information">
                                <div class="text-bold">
                                    Гункан Снежный краб
                                </div>
                                <div class="menu-card__information-price text-bold">
                                    800 KZT
                                </div>
                                <div class="menu-card__information-ingredients">
                                    Рис, краб-крем, нори
                                </div>
                            </div>
                            <div class="menu-card__button">
                                <a class="menu-card__button-card" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-cart-shopping"></i>
                                    </span>
                                    <div class="menu-card__white text-bold">
                                        Добавить к заказу
                                    </div>
                                </a>

                                <a class="menu-card__button-like" href="#">
                                    <span class="menu-card__white">
                                        <i class="fa-sharp fa-solid fa-heart icon__settings"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </article>

                <article class="department" id="appetizers">
                    <h2 class="department-text">Закуски</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                    </div>
                </article>

                <article class="department" id="pizza">
                    <h2 class="department-text">Пицца</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                        <div class="menu-card">Карточка 2</div>
                        <div class="menu-card">Карточка 3</div>
                        <div class="menu-card">Карточка 4</div>
                        <div class="menu-card">Карточка 5</div>
                    </div>

                <article class="department" id="sushi">
                    <h2 class="department-text">Роллы</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                        <div class="menu-card">Карточка 2</div>
                        <div class="menu-card">Карточка 3</div>
                        <div class="menu-card">Карточка 4</div>
                        <div class="menu-card">Карточка 5</div>
                        <div class="menu-card">Карточка 6</div>
                        <div class="menu-card">Карточка 7</div>
                        <div class="menu-card">Карточка 8</div>
                        <div class="menu-card">Карточка 9</div>
                    </div>
                </article>

                <article class="department" id="fried">
                    <h2 class="department-text">Роллы жаренные</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                        <div class="menu-card">Карточка 2</div>
                        <div class="menu-card">Карточка 3</div>
                        <div class="menu-card">Карточка 4</div>

                    </div>
                </article>

                <article class="department" id="baked">
                    <h2 class="department-text">Роллы запеченные</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                        <div class="menu-card">Карточка 2</div>
                        <div class="menu-card">Карточка 3</div>
                        <div class="menu-card">Карточка 4</div>
                        <div class="menu-card">Карточка 5</div>
                    </div>
                </article>

                <article class="department" id="sets">
                    <h2 class="department-text">Сеты</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                        <div class="menu-card">Карточка 2</div>
                        <div class="menu-card">Карточка 3</div>
                        <div class="menu-card">Карточка 4</div>
                    </div>
                </article>

                <article class="department" id="drinks">
                    <h2 class="department-text">Напитки</h2>
                    <div class="menu-cards">
                        <div class="menu-card">Карточка 1</div>
                        <div class="menu-card">Карточка 2</div>
                        <div class="menu-card">Карточка 3</div>
                        <div class="menu-card">Карточка 4</div>
                        <div class="menu-card">Карточка 5</div>
                    </div>
                </article>
            </section>

            <aside id="cart">
                <h2>Корзина</h2>
                <!-- Здесь будет содержимое корзины -->
            </aside>
    </article>

